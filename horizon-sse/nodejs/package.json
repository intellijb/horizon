{
  "name": "horizon-sse",
  "version": "1.0.0",
  "description": "Minimal SSE server-client setup with TypeScript and comprehensive logging",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "dev:server": "ts-node src/server/index.ts",
    "dev:deep": "ts-node src/deep-server/index.ts",
    "dev:proxy": "ts-node src/proxy-server/index.ts",
    "dev:loadtest": "ts-node src/loadtest/index.ts",
    "dev:client": "serve public -l 8080",
    "start": "node dist/server/index.js",
    "start:deep": "node dist/deep-server/index.js",
    "start:proxy": "node dist/proxy-server/index.js",
    "start:loadtest": "node dist/loadtest/index.js",
    "clean": "rm -rf dist",
    "test:local": "npm run build && npm run start:deep & npm run start:proxy & sleep 3 && npm run start:loadtest -- -clients 10 -rampup 2s"
  },
  "keywords": ["sse", "server-sent-events", "typescript", "express", "winston"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "serve": "^14.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "winston": "^3.11.0"
  }
}