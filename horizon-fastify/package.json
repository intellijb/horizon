{
  "name": "horizon-fastify",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --tsconfig tsx.config.json src/db/seed.ts",
    "db:reset": "npm run db:migrate && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/redis": "^7.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@scalar/fastify-api-reference": "^1.35.5",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.0.0",
    "graphql": "^16.11.0",
    "ioredis": "^5.7.0",
    "mercurius": "^16.2.0",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.18.1",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
