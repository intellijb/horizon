{
  "name": "horizon-fastify",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.build.json && node scripts/fix-esm-imports.js",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "node dist/modules/platform/database/migrate.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --tsconfig tsx.config.json src/modules/platform/database/seed.ts",
    "db:seed:prod": "node dist/modules/platform/database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "jest": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test": "npm run jest",
    "test:watch": "npm run jest -- --watch",
    "test:coverage": "npm run jest -- --coverage",
    "test:e2e": "npm run jest -- --config=src/tests/e2e/jest.config.mjs",
    "test:e2e:auth": "npm run jest -- --config=src/tests/e2e/jest.config.mjs --testPathPattern=auth"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.893.0",
    "@aws-sdk/lib-dynamodb": "^3.893.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/redis": "^7.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@scalar/fastify-api-reference": "^1.35.5",
    "argon2": "^0.44.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.0.0",
    "graphql": "^16.11.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mercurius": "^16.2.0",
    "nanoid": "^5.1.5",
    "openai": "^5.20.2",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "zod": "^4.1.8"
  },
  "imports": {
    "#*": "./src/*"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.18.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
