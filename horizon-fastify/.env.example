NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database - Must match horizon-infra/.env
POSTGRES_URI=postgresql://horizon:CHANGE_ME@localhost:20432/horizon

# Redis - Must match horizon-infra/.env
REDIS_URL=redis://:CHANGE_ME@localhost:20379

# JWT Configuration
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_KEY
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
JWT_ISSUER=horizon

# Security
BCRYPT_ROUNDS=12
MAX_DEVICES_PER_USER=5
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=15m

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
