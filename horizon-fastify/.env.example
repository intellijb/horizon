# Application Environment
NODE_ENV=development
PORT=20000
HOST=0.0.0.0

# Database Configuration
POSTGRES_URI=postgresql://horizon:singularity2030@localhost:20432/horizon
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_RETRY_ATTEMPTS=5
DB_RETRY_DELAY=1000

# Redis Configuration
REDIS_URL=redis://:singularity2031@localhost:20379
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_RECONNECT_ON_ERROR=true

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secure-32-character-secret-key-here-change-this-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
JWT_ISSUER=horizon
JWT_AUDIENCE=

# Security Settings
BCRYPT_ROUNDS=12
MAX_DEVICES_PER_USER=5
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_HTTP_ONLY=true

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Logging Configuration
LOG_LEVEL=info
LOG_PRETTY=false
LOG_REDACT_ENABLED=true
LOG_CORRELATION_ENABLED=true
LOG_REQUEST_ENABLED=true
LOG_REQUEST_HEADERS=false
LOG_RESPONSE_ENABLED=true
LOG_SQL_QUERIES=false
LOG_SLOW_QUERIES_MS=1000

# Monitoring (Optional)
SENTRY_DSN=

# Development Settings
ENABLE_SWAGGER=true
CORS_ORIGIN=*

# Shutdown Configuration
SHUTDOWN_TIMEOUT=30000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

OPENAI_API_KEY=openai-api-key-goes-here
